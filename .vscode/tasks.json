{
    "tasks": [
        {
            "type": "shell",
            "label": "build and run",
            "dependsOn": [
                "C/C++: gcc-14 build active file"
            ],
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-14 build active file",
            "command": "/opt/homebrew/opt/gcc/bin/gcc-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-fopenmp",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
        }
    ],
    "version": "2.0.0"
}